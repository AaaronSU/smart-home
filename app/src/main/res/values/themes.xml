<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SmartHome" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Creer le composant title par defaut -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Creer le composant sous title par defaut -->
    <style name="SubtitleTextStyle" parent="@style/DefaultTextStyle">
        <item name="android:textColor">@color/medium_gray</item>
    </style>

    <!-- Creer le composant sous title par defaut -->
    <style name="TitleTextStyle" parent="@style/SubtitleTextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Personnaliser la barre de navigation -->
    <style name="BottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationStyle" parent="Widget.Design.NavigationView">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/dark_blue</item>
    </style>
</resources>
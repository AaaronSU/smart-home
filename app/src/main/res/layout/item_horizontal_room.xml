<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/room_bar_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_page_room_name"
        android:textColor="@color/medium_gray"
        style="@style/TitleTextStyle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/room_active_or_not"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="@color/light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/room_bar_room_name"
        app:layout_constraintStart_toStartOf="@+id/room_bar_room_name"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
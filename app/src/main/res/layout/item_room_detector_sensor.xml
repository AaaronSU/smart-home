<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/button_analog_sensor"
    android:layout_width="180dp"
    android:layout_height="170dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_detectorsensor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/dark_blue"
        android:layout_marginBottom="@dimen/small_margin"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_detectorsensor"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="@dimen/default_margin"
        android:elevation="8dp"
        android:src="@drawable/ic_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/detectorsensor_name"
        style="@style/TitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:elevation="8dp"
        android:text="@string/detector_sensor_component_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_detectorsensor" />

    <TextView
        android:id="@+id/detectorsensor_room_name"
        style="@style/SubtitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:elevation="8dp"
        android:text="@string/devicesroom_room_name"
        app:layout_constraintEnd_toEndOf="@+id/detectorsensor_name"
        app:layout_constraintStart_toStartOf="@+id/detectorsensor_name"
        app:layout_constraintTop_toBottomOf="@+id/detectorsensor_name" />

</androidx.constraintlayout.widget.ConstraintLayout>